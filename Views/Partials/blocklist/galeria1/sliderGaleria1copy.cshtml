@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListModel>
@using Umbraco.Cms.Core.Models
@{
    if (Model?.Any() != true) { return; }
}

    <div class="carousel carousel-tabs-swiper">
        <!-- slider -->
        <div class="swiper-container swiper-1">
            <div class="swiper-wrapper">
                
                @foreach (var block in Model)
                {

                    if(block.Settings.Value<String>("hide")=="False"){
                        var image = block.Content.Value<MediaWithCrops>("image");
                        var paragraph = block.Content.Value<string>("paragraph");
                        var title = block.Content.Value<string>("title");
                        if(image != null && !string.IsNullOrEmpty(title)&&!string.IsNullOrEmpty(paragraph)){
                            <!-- slide -->
                            <div class="swiper-slide">
                                <img src="@image.MediaUrl()" class="desktop"
                                    alt="@image.Name">
                                <img src="@image.MediaUrl()"
                                    class="mobile" alt="@image.Name">
                            </div>

                        }

                    }

                }

            </div>
            <!-- Add Arrows -->
            <div class="swiper1-pagination hide"></div>
            <!--Buttons PREV & NEXT-->
            <div class="swiper-button-next button1 swiper-button-next1"></div>
            <div class="swiper-button-prev button1 swiper-button-prev1"></div>
            <div class="tab-bar">
                <nav class="cont-tabs">
                    <!--#set var="ACTIVE" value="active" -->
                    @foreach (var block in Model)
                    {   
                        if(block.Settings.Value<String>("hide")=="False"){
                            var image = block.Content.Value<MediaWithCrops>("image");
                            var paragraph = block.Content.Value<string>("paragraph");
                            var title = block.Content.Value<string>("title");
                            if(image != null && !string.IsNullOrEmpty(title)&&!string.IsNullOrEmpty(paragraph)){
                                <button class="tablink slideChange-tab <!--#echo var=' ACTIVE'-->">
                                    @title
                                </button>
                                <!--#if expr='v("ACTIVE") =~ /active/' -->
                                <!--#set var="ACTIVE" value="" -->
                                <!--#endif -->
                            }
                        }
                    }

                </nav>
            </div>
        </div>
    </div>
</div>
